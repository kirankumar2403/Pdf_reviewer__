{
  "version": 2,
  "builds": [
    {
      "src": "apps/api/**/*.ts",
      "use": "@vercel/node",
      "config": { "runtime": "nodejs20.x" }
    },
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "apps/api/index.js"
    },
    {
      "src": "/upload/(.*)",
      "dest": "apps/api/index.js"
    },
    {
      "src": "/extract/(.*)",
      "dest": "apps/api/index.js"
    },
    {
      "src": "/invoices/(.*)",
      "dest": "apps/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ]
}
